@model banruou.ViewModel.OrderViewModel
<section class="order">
    <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel">Sản phẩm : @Model.Products.Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
                </div>
                <div class="modal-body">
                    <p class="font-weight-bold">Thông tin của bạn</p>
                    <form method="post" id="orderForm">
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()
                        <div class="oder-form-item">
                            @Html.TextBoxFor(a => a.Order.Name, new { @placeholder = "Họ tên" })
                            @Html.ValidationMessageFor(a => a.Order.Name)
                        </div>
                        <div class="oder-form-item">
                            @Html.TextBoxFor(a => a.Order.Address, new { @placeholder = "Địa chỉ" })
                            @Html.ValidationMessageFor(a => a.Order.Address)
                        </div>
                        <div class="oder-form-item">
                            @Html.TextBoxFor(a => a.Order.Phone, new { @placeholder = "Số điện thoại" })
                            @Html.ValidationMessageFor(a => a.Order.Phone)
                        </div>
                        <div class="oder-form-item">
                            @Html.TextBoxFor(a => a.Order.Email, new { @placeholder = "Email của bạn" })
                            @Html.ValidationMessageFor(a => a.Order.Email)
                        </div>
                        <div class="oder-form-item form_name">
                            @Html.TextAreaFor(model => model.Order.Discription , new { @class="w-100",@placeholder = "Lời nhắn (nếu có)" , rows = 5})
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary" type="submit">Gửi yêu cầu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>