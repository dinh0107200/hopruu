@model banruou.ViewModel.ShowArtilceCategory
@{
    ViewBag.Title = "ShowArtilceCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Action("Header")
<section class="list-new-feed">
    <div class="container">
        <div class="list-new-feed-title">
            <h3>@Model.ArticleCategory.CategoryName</h3>
        </div>
        <div class="list-new-feed-item">
            <div class="row">
                <div class="row">
                    @if (Model.Articles.Any())
                    {
                        foreach (var item in Model.Articles)
                        {
                            <div class="col-md-3">
                                <div class="feed-item">
                                    <a href="@Url.Action("ArticleCategory", "Home" , new { url = item.Url })">
                                        <div class="new-feed-item-img">
                                            <img src="@Path.Combine("/images/articles/" , item.Image)" alt="">
                                        </div>
                                        <div class="new-feed-item-name">
                                            <p>@item.Subject</p>
                                        </div>
                                        <hr>
                                        <div class="new-feed-item-description">
                                            <p>@item.Description</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="mb-5 mt-5">
                            <p class="alert alert-success small">Nội dung hiện chưa được cập nhật. Vui lòng quay lại sau !!!!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@Html.Action("Footer")

