@model banruou.Models.Product
<div class="product-item">
    <div class="product-img">
        <a href="@Url.Action("ProductDetail" , "Home" , new { Model.Url})">
            @if (Model.Image != null)
            {
                <img src="@Path.Combine("/images/product/", Model.ListImage.Split(',')[0])" alt="">
            }
            else
            {
                <img src="/Content/images/img-main/no-image.png" alt="NO PICTURE" class="img-fluid"/>
            }
        </a>
    </div>
    <div class="product-name">
        <a href="@Url.Action("ProductDetail" , "Home" , new { Model.Url})">
            @Model.Name
        </a>
    </div>
    <div class="product-price">
        @($"{Model.Price:#,##0.##}") đ
    </div>
    <div class="product-btn">
        <a href="@Url.Action("ProductDetail" , "Home" , new { Model.Url})">
            <span>Đặt mua</span>
        </a>
    </div>
</div>